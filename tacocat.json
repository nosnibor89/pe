{
    "DjangoEC2Instance": {
        "Type": "AWS::EC2::Instance",
        "Properties": {
            "ImageId": {
                "Fn::FindInMap": [
                    "AWSRegionArch2AMI",
                    {
                        "Ref": "AWS::Region"
                    },
                    {
                        "Fn::FindInMap": [
                            "AWSInstanceType2Arch",
                            {
                                "Ref": "InstanceType"
                            },
                            "Arch"
                        ]
                    }
                ]
            },
            "KeyName": {
                "Ref": "DjangoKeyName"
            },
            "InstanceType": {
                "Ref": "MyInstanceType"
            },
            "SecurityGroups": [
                {
                    "Ref": "DjangoEc2SecurityGroup"
                }
            ],
            "BlockDeviceMappings": [
                {
                    "DeviceName": "/dev/sda1",
                    "Ebs": {
                        "VolumeSize": 50
                    }
                },
                {
                    "DeviceName": "/dev/sdm",
                    "Ebs": {
                        "VolumeSize": 100
                    }
                }
            ]
        }
    }
}